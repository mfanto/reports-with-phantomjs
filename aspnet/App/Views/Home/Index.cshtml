@model App.ViewModels.ReportOptionsViewModel

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 text-center">
        <h1>PhantomJS Reports Demo</h1>
        <p class="lead">Generate PDF reports with client-side graphs. To get started, enter a name and click download</p>

        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new {@class = "form-inline"}))
        {
            <div class="form-group">
                @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder = "Your Name"})
            </div>
            <button type="submit" class="btn btn-default">Download</button>
        }

    </div>
</div>

